{
  "name": "pity",
  "version": "0.1.4",
  "repository": "https://github.com/mtth/pity",
  "description": "Log-friendly errors",
  "main": "lib/",
  "files": [
    "lib/"
  ],
  "scripts": {
    "build": "tsc -p src",
    "clean": "rm -rf lib node_modules out package-lock.json",
    "fix": "npm run pretty && npm run lint -- --fix",
    "lint": "eslint '{src,test}/**/*.ts'",
    "prepare": "npm run build",
    "pretty": "prettier --write '{src,test}/**/*.ts'",
    "test": "jest",
    "test-debug": "node inspect node_modules/.bin/jest --runInBand --testTimeout=1000000",
    "watch": "tsc -b -w src test"
  },
  "author": "Matthieu Monsch <mtth@apache.org>",
  "license": "MIT",
  "dependencies": {
    "core-util-is": "^1.0.2",
    "http-status-codes": "^2.1.4",
    "verror": "^1.10.0"
  },
  "devDependencies": {
    "@types/verror": "^1.10.4",
    "eslint": "^7.20.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  },
  "jest": {
    "coverageDirectory": "../../out/coverage/pity",
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/test/"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "test/tsconfig.json"
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      ".d.ts",
      ".js"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "gitHead": "fa516bd5aad3f972419cdbfdf2461004da11e330"
}
